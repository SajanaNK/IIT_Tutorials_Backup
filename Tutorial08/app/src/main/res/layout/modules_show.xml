<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckedTextView
        android:id="@+id/show_modules_text_view"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"

        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/check_box_modules"
        android:layout_width="43dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/show_modules_text_view"
        app:layout_constraintEnd_toEndOf="@+id/show_modules_text_view"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="@+id/show_modules_text_view"
        app:layout_constraintTop_toTopOf="@+id/show_modules_text_view"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>